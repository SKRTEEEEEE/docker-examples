FROM node:22.13.1-slim

WORKDIR /app

# Copiar manifiestos de dependencias
COPY package*.json ./

# Instalar dependencias (incluyendo devDependencies)
RUN npm install

# NO copiamos el c√≥digo fuente - se monta con bind mount
# NO hacemos build - Vite corre en modo dev

# Puerto de Vite dev server
EXPOSE 5173

# Comando de desarrollo con Vite
# Vite escucha en 0.0.0.0 para aceptar conexiones desde fuera del contenedor
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]