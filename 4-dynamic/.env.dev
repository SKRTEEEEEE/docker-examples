# Development Environment Configuration

# Restart Policy
RESTART_POLICY=no

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=feeds
POSTGRES_PORT=5432

# InfluxDB Configuration
INFLUX_USER=admin
INFLUX_PASSWORD=adminpass
INFLUX_ORG=my-org
INFLUX_BUCKET=feeds-metrics
INFLUX_TOKEN=my-super-secret-token
INFLUX_PORT=8086

# Redis Configuration
REDIS_PASSWORD=redispass
REDIS_PORT=6379

# MongoDB Configuration
MONGO_USER=root
MONGO_PASSWORD=example
MONGO_DB=articles
MONGO_PORT=27017

# Health Monitor Service
HEALTH_MONITOR_DOCKERFILE=Dockerfile.dev
HEALTH_MONITOR_PORT=8080
HEALTH_MONITOR_EXTERNAL_PORT=8080
CHECK_INTERVAL=30s
HEALTH_MONITOR_VOLUME=./health-monitor

# Smart Harvester Service
SMART_HARVESTER_DOCKERFILE=Dockerfile.dev
SMART_HARVESTER_PORT=3000
SMART_HARVESTER_EXTERNAL_PORT=3000
HARVEST_INTERVAL=60
ALLOWED_STATUSES=green,yellow
SMART_HARVESTER_VOLUME=./smart-harvester

# AI Publisher Service
AI_PUBLISHER_DOCKERFILE=Dockerfile.dev
AI_PUBLISHER_PORT=5000
AI_PUBLISHER_EXTERNAL_PORT=5000
AI_PUBLISHER_VOLUME=./ai-publisher
